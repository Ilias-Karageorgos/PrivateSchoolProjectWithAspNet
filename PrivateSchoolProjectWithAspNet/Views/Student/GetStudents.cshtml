@model IEnumerable<PrivateSchoolProjectWithAspNet.Models.Student>

@{
    ViewBag.Title = "GetStudents";
}

<h2>All Students</h2>

<p>
    @Html.ActionLink("Create New", "CreateStudent")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuitionFees)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TuitionFees)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditStudent", new { id=item.StudentId }) |
            @Html.ActionLink("Details", "GetStudent", new { id=item.StudentId }) |
            @Html.ActionLink("Delete", "DeleteStudent", new { id=item.StudentId })
        </td>
    </tr>
}

</table>
