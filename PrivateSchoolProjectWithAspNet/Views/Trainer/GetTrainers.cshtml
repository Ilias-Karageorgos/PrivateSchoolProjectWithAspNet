@model IEnumerable<PrivateSchoolProjectWithAspNet.Models.Trainer>

@{
    ViewBag.Title = "All Trainers";
}

<h2>All Trainers</h2>

<p>
    @Html.ActionLink("Create New", "CreateTrainer")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTrainer", new { id = item.TrainerId }) |
            @Html.ActionLink("Details", "GetTrainer", new { id = item.TrainerId }) |
            @Html.ActionLink("Delete", "DeleteTrainer", new { id = item.TrainerId })
        </td>
    </tr>
}

</table>
