@model IEnumerable<PrivateSchoolProjectWithAspNet.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<h2>All Courses</h2>

<p>
    @Html.ActionLink("Create New", "CreateCourse")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCourse", new { id = item.CourseId }) |
            @Html.ActionLink("Details", "GetCourse", new { id = item.CourseId }) |
            @Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseId })
        </td>
    </tr>
}

</table>
